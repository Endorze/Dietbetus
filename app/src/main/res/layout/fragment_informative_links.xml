<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformativeLinksFragment"
    android:background="@drawable/diabetesmainmenubackground"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Du kanske har lite funderingar kring diabetes?
                \nNedan finner du några knappar som tar dig till Youtube för att besvara eventuella frågor!"
                android:textStyle="bold"
                android:textSize="14dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"/>

        </RelativeLayout>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Vad innebär diabetes?"
            android:backgroundTint="@color/buttonColor"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Diabetes typ-1"
            android:backgroundTint="@color/buttonColor"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/button2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diabetes typ-2"
            android:backgroundTint="@color/buttonColor"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/symptomsButton"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptom vid högt/lågt blodsocker"
            android:backgroundTint="@color/buttonColor"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/question"/>



    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>